# PhotoSync user service env - template file
# This file shows the structure but should not contain user-specific absolute paths
# After running install.sh, the real config will be in ~/.config/photosync/photosync.env

PYTHONPATH=~/code/python/photosync

# Watcher configuration
QUIET_SECONDS=60
MAX_WAIT_SECONDS=300
RUNNER_PATH=~/.local/bin/photosync-run
LOCK_PATH=~/.cache/photosync/.photosync.lock

# Polling configuration
POLL_INTERVAL=300
POLL_MTIME_DELTA=1.0

# PhotoSync application defaults
PHOTOSYNC_LAST_SYNC_TIME_PATH=~/.cache/photosync/.photosync_last.json
PHOTOSYNC_DRY_RUN=0


